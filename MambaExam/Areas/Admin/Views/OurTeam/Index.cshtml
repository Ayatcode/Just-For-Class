@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Core3.Entities
@model IEnumerable<OurTeam>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-10">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3>IEnumerable Special Team</h3>
                <a class="btn btn-primary" asp-action="Create">Create Items</a>
                <h5></h5>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Position
                                </th>
                                <th>
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img style="width: 150px; height: auto;" src="~/assets/img/team/@item.Img" alt="image" />
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        @item.Role
                                    </td>
                                    <td>
                                        <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">Detail</a>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


