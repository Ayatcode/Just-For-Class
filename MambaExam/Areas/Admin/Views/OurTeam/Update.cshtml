@using MambaExam.Areas.Admin.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model UpdateOurTeamModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>
<div class="col-6">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Update Shippind</h4>
			<form class="forms-sample formupdate" method="post" enctype="multipart/form-data">

				<div class="form-group">
					<label>Image</label>
					<img style="height:80px" src="~/assets/img/team/@Model." />
					<input type="file" asp-for="img" class="form-control" placeholder="Image">
					<span class="text-danger" asp-validation-for="img"></span>
				</div>

				<div class="form-group">
					<label>Fullname</label>
					<input asp-for="name" class="form-control" placeholder="Category">
					<span class="text-danger" asp-validation-for="name"></span>
				</div>

				<div class="form-group">
					<label>Position</label>
					<input asp-for="Role" class="form-control" placeholder="Title">
					<span class="text-danger" asp-validation-for="Role"></span>
				</div>


				<button class="btn btn-primary mr-2 updatebtn">Submit</button>
				<a asp-action="Index" class="btn btn-light">Cancel</a>

			</form>
		</div>
	</div>
</div>

