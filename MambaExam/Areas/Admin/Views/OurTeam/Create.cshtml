@using MambaExam.Areas.Admin.Models


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model CreateOurTeamModel
@{
	ViewData["Title"] = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card col-5">
	<div class="card-body">
		<h4 class="card-title">Create EmployeeVM</h4>
		<form class="forms-sample" method="post" enctype="multipart/form-data">

			<div class="form-group">
				<label>Image</label>
				<input type="file" asp-for="img" class="form-control" placeholder="Image" accept="image/*">
				<span class="text-danger" asp-validation-for="img"></span>
			</div>

			<div class="form-group">
				<label>Fullname</label>
				<input asp-for="Name" class="form-control" placeholder="Title">
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>

			<div class="form-group">
				<label>Position</label>
				<input asp-for="Role" class="form-control" placeholder="Title">
				<span class="text-danger" asp-validation-for="Role"></span>
			</div>


			<button type="submit" class="btn btn-primary mr-2">Submit</button>
			<button asp-action="Index" class="btn btn-light">Cancel</button>

		</form>
	</div>
</div>



